<aside class="menu padded">
  <p class="menu-label">
    Mailboxes
  </p>
  <ul class="menu-list">
    <% mailboxes.each do |mailbox| %>
    <li><%= link_to mailbox[0], mailbox_path(mailbox[1]) %></li>
    <% end %>
  </ul>
  <% if params[:mailbox_id].present? && params[:id].present? %>
  <p class="menu-label">
    Predefined Search
  </p>
  <ul class="menu-list">
    <li>
      <%= link_to "Github", mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "github"), class: is_active_class(:search, "github") %>
    </li>
    <li>
      <%= link_to "Adish", mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "adish"), class: is_active_class(:search, "adish") %>
    </li>
    <li>
      <%= link_to "No Labels", mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "has:nouserlabels"), class: is_active_class(:search, "has:nouserlabels") %>
    </li>
    <li>
      <%= link_to "Bounced", mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "from:Bounce<nobody@gmail.com>"), class: is_active_class(:search, "from:Bounce<nobody@gmail.com>") %>
    </li>
  </ul>
  <% end %>
</aside>