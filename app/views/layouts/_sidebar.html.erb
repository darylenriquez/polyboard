<aside class="menu">
  <p class="menu-label">
    Mailboxes
  </p>
  <ul class="menu-list">
    <% mailboxes.each do |mailbox| %>
    <li><%= link_to mailbox[0], mailbox_path(mailbox[1]) %></li>
    <% end %>
  </ul>
  <% if params[:mailbox_id].present? && params[:id].present? %>
  <p class="menu-label">
    Predefined Search
  </p>
  <ul class="menu-list">
    <li>
      <%= link_to "Github", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "github") %>
    </li>
    <li>
      <%= link_to "Adish", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "adish") %>
    </li>
    <li>
      <a href="#">Common Labels</a>
      <ul>
        <li>
          <%= link_to "Unread", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "label:unread") %>
        </li>
        <li>
          <%= link_to "Read", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "label:read") %>
        </li>
        <li>
          <%= link_to "Sent", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "label:sent") %>
        </li>
      </ul>
    </li>
    <li>
      <%= link_to "No Labels", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "has:nouserlabels") %>
    </li>
    <li>
      <%= link_to "Bounced", search_mailbox_mail_path(mailbox_id: params[:mailbox_id], id: params[:id], search: "from:Bounce<nobody@gmail.com>") %>
    </li>
  </ul>
  <% end %>
</aside>